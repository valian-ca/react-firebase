{
  "name": "@valian/rxjs-firebase",
  "description": "rxjs firebase utilities",
  "version": "1.0.6",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/valian-ca/react-firebase.git"
  },
  "author": {
    "name": "Valian",
    "organization": true,
    "url": "https://valian.ca"
  },
  "contributors": [
    {
      "name": "Julien Marcil",
      "email": "julien@valian.ca"
    }
  ],
  "keywords": [
    "rxjs",
    "firestore",
    "firebase"
  ],
  "license": "MIT",
  "devDependencies": {
    "firebase": "^12.0.0",
    "rxjs": "^7.8.2",
    "vitest-mock-extended": "^3.1.0"
  },
  "peerDependencies": {
    "@firebase/firestore": "^4.7.0",
    "rxjs": "^7.8.0"
  },
  "type": "module",
  "publishConfig": {
    "access": "public",
    "exports": {
      ".": {
        "import": "./lib/index.mjs",
        "types": "./lib/index.d.mts",
        "require": "./lib/index.cjs",
        "default": "./lib/index.mjs"
      }
    },
    "main": "./lib/index.cjs",
    "module": "./lib/index.mjs",
    "types": "./lib/index.d.ts"
  },
  "exports": "./src/index.ts",
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "types": "./src/index.ts",
  "engines": {
    "node": ">= 22"
  },
  "scripts": {
    "build": "rm -rf ./lib && rollup -c",
    "prepack": "pnpm run build",
    "eslint": "eslint .",
    "test": "vitest run --coverage",
    "test:watch": "vitest",
    "type-check": "tsc"
  }
}
