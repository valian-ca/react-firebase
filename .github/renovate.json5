{
  extends: ['config:js-lib', 'config:semverAllMonthly', ':semanticCommits'],
  labels: ['dependencies'],
  packageRules: [
    {
      groupName: 'GitHub Actions Dependencies',
      matchManagers: ['github-actions'],
    },
    {
      groupName: 'Node-based Dev Tools',
      matchManagers: ['npm'],
    },
    {
      groupName: 'main dependencies',
      matchPackageNames: ['firebase', '/react/'],
    },
    {
      groupName: 'Typescript',
      matchPackageNames: ['/^@types/'],
    },
    {
      groupName: 'Typescript',
      matchPackageNames: ['typescript', 'ts-node', 'type-fest'],
    },
    {
      groupName: 'Tests',
      matchPackageNames: ['/vitest/'],
    },
    {
      groupName: 'Linters',
      matchPackageNames: ['/eslint/'],
    },
    {
      groupName: 'Node.js',
      matchPackageNames: ['pnpm'],
    },
    {
      groupName: 'Node.js',
      matchPackageNames: ['node'],
      allowedVersions: '<25.0.0',
    },
    {
      groupName: 'Project Tools',
      matchPackageNames: ['/@commitlint/', '/@tsconfig/', '/markdownlint/', '/@nx/', '/@swc/'],
    },
    {
      groupName: 'Project Tools',
      matchPackageNames: ['nx', 'prettier'],
    },
  ],
}
