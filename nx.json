{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "release": {
    "projects": ["packages/*"],
    "changelog": {
      "projectChangelogs": true,
      "workspaceChangelog": {
        "file": false,
        "createRelease": "github"
      }
    },
    "git": {
      "tag": false
    }
  },
  "plugins": [
    {
      "plugin": "@nx/eslint/plugin",
      "options": {
        "targetName": "lint"
      }
    }
  ],
  "tui": {
    "enabled": false
  }
}
